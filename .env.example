# Pi Zero 2W Application - Environment Configuration
# Copy this file to .env and fill in actual values
# DO NOT commit .env file to repository

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False
SECRET_KEY=your-secret-key-here-change-in-production

# Database Configuration
PIZERO_MEDICINE_DB=/home/user/pizerowgpio/medicine.db
CONFIG_FILE=/home/user/pizerowgpio/config.json
MEDICINE_DATA_FILE=/home/user/pizerowgpio/medicine_data.json

# JWT Configuration (for future authentication)
JWT_SECRET_KEY=your-jwt-secret-key-here-change-in-production
JWT_ALGORITHM=HS256

# WiFi Configuration (DO NOT hardcode passwords in code)
WIFI_SSID=your-wifi-ssid
WIFI_PASSWORD=your-wifi-password

# Hotspot Configuration
HOTSPOT_SSID=PiZero-Config
HOTSPOT_PASSWORD=your-secure-hotspot-password

# API Configuration
API_HOST=0.0.0.0
API_PORT=5000
API_RATE_LIMIT=100/hour

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/var/log/pizero/application.log

# External API Keys (if used)
WEATHER_API_KEY=your-weather-api-key
FLIGHTS_API_KEY=your-flights-api-key
DISNEY_API_KEY=your-disney-api-key
MBTA_API_KEY=your-mbta-api-key

# Security Configuration
ALLOWED_ORIGINS=http://localhost:5000,https://yourdomain.com
CORS_ENABLED=true
RATE_LIMITING_ENABLED=true

# Optional: Sentry for error tracking (if using)
SENTRY_DSN=

# Optional: CloudFlare for DDoS protection (if using)
CLOUDFLARE_API_KEY=

# Note: Never commit actual credentials. Use secure secret management:
# - GitHub Secrets (for CI/CD)
# - HashiCorp Vault (for production)
# - AWS Secrets Manager (for AWS deployments)
# - Azure Key Vault (for Azure deployments)

# Hardware Configuration
# Options: auto, touch, button
PIZERO_INPUT_MODE=auto

# Hardware profile to use (overrides auto-detection)
# Options: auto, touch, button
PIZERO_HARDWARE_PROFILE=auto

# GPIO pin for button input (default: 3 for PiSugar)
PIZERO_BUTTON_GPIO=3

# Long press threshold in seconds
PIZERO_BUTTON_LONG_PRESS=2.0
