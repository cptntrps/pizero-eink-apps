[flake8]
# Maximum line length (PEP 8 is 79, but we use 99)
max-line-length = 99

# List of files to ignore
ignore =
    # E128: continuation line under-indented for visual indent
    E128,
    # E129: visually indented line with same indent as next logical line
    E129,
    # W293: blank line contains whitespace
    W293,
    # E501: line too long (handled by max-line-length)
    # E302/E305: blank lines (handled by pylint)

# List of error codes to select
# (empty means select all except those in ignore list)
select =
    # Errors
    E,
    # Warnings
    W,
    # Pyflakes
    F,
    # Complexity
    C

# Files to exclude
exclude =
    .git,
    __pycache__,
    .pytest_cache,
    .venv,
    venv,
    env,
    build,
    dist,
    *.egg-info,
    .tox,
    .mypy_cache,
    node_modules,
    backups

# Per-file ignores
per-file-ignores =
    __init__.py: F401, F403
    tests/: F401, F841
    examples/: F401, E501

# Complexity
max-complexity = 10

# Docstring coverage
docstring-convention = google

# Statistics
statistics = True

# Reporting
format = default
